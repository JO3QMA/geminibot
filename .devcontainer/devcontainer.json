{
	"name": "Discord-Gemini Bot Development",
	"image": "mcr.microsoft.com/devcontainers/go:1.21",
	
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ms-vscode.go",
				"ms-vscode.vscode-json",
				"redhat.vscode-yaml",
				"ms-vscode.vscode-docker"
			],
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go",
				"go.goroot": "/usr/local/go"
			}
		}
	},

	"postCreateCommand": "go mod download && go mod tidy",
	
	"remoteUser": "vscode",
	
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/cache,target=/go/pkg/mod,type=bind,consistency=cached"
	],

	"env": {
		"DISCORD_BOT_TOKEN": "",
		"GEMINI_API_KEY": "",
		"GO111MODULE": "on",
		"GOPRIVATE": "*"
	}
}
